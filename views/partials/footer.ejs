<script>
    document.addEventListener('DOMContentLoaded', function () {
        const toggleCardsButton = document.getElementById('toggle-cards');
        const cards = document.querySelectorAll('.cards');

        toggleCardsButton.addEventListener('click', function () {
            cards.forEach(card => {
                card.classList.toggle('visible');
            });
            if (toggleCardsButton.innerText === 'Read More ↓') {
                toggleCardsButton.innerText = 'Read Less ↑';
            } else {
                toggleCardsButton.innerText = 'Read More ↓';
            }
        });
    });
</script>
