<%- include("partials/header"); -%>
    <div class="container">

        <h1>Compose</h1>
        <form class="" action="/compose" method="post">
            <div class="form-group">
                <label>Title</label>
                <input class="form-control" type="text" name="postTitle">
                <label>Author</label>
                <input class="form-control" type="text" name="userName">

                <label>Post</label>
                <textarea class="form-control" name="postBody" rows="5" cols="30"></textarea>

            </div>
            <button class="btn btn-primary" styles="background-color: #4285f4" type="submit"
                name="button">Publish</button>
        </form>
    </div>

    <%- include("partials/footer"); -%>